{
  "name": "kodax",
  "version": "0.4.3",
  "description": "极致轻量化 Coding Agent - TypeScript 实现，支持7种LLM提供商",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kodax": "./dist/kodax_cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:packages": "npm run build --workspaces",
    "dev": "tsx src/kodax_cli.ts",
    "dev:cli": "tsx src/kodax_cli.ts",
    "start": "node dist/kodax_cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist/",
    "clean:packages": "npm run clean --workspaces"
  },
  "keywords": [
    "ai",
    "coding-agent",
    "llm",
    "anthropic",
    "openai",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kodax/core": "*",
    "@kodax/repl": "*",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "glob": "^11.0.1",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^18.2.0",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icetomoyo/KodaX.git"
  }
}
