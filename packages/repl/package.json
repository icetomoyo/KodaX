{
  "name": "@kodax/repl",
  "version": "0.4.9",
  "description": "KodaX REPL - 完整的交互式终端体验",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').cpSync('src/skills/builtin','dist/skills/builtin',{recursive:true})\"",
    "dev": "tsc --watch",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kodax/core": "*",
    "chalk": "^5.4.1",
    "ink": "^6.7.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.0.0",
    "string-width": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.0",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icetomoyo/KodaX.git",
    "directory": "packages/repl"
  },
  "license": "MIT"
}
