{
  "name": "@kodax/cli",
  "version": "0.4.0",
  "description": "KodaX CLI - 轻量级 CLI 包装层",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kodax": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kodax/core": "*",
    "chalk": "^5.4.1",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icetomoyo/KodaX.git",
    "directory": "packages/cli"
  },
  "license": "MIT"
}
